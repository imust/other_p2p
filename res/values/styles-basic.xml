<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="layout">
    </style>
    
    <style name="layout.m">
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="layout.w">
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="layout.m.w">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout.m.m">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout.w.m">
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="layout.w.w">
        <item name="android:layout_height">wrap_content</item>
    </style>
    
        
    <style name="textfield">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t18</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:background">@drawable/bg_textfield_selector</item>
    </style>
    
    <style name="textfield.transparent">
        <item name="android:background">@color/bg_empty</item>
    </style>
    
    <style name="text_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h50</item>
        <item name="android:textSize">@dimen/t18</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/p20</item>
        <item name="android:background">@drawable/bg_menu_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/p20</item>
    </style>
    
    
    <style name="button_blue">
        <item name="android:paddingLeft">@dimen/p5</item>
        <item name="android:paddingRight">@dimen/p5</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">@dimen/t18</item>
        <item name="android:textColor">@color/btn_blue</item>
        <item name="android:text">投　标</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
    </style>
    
    
</resources>