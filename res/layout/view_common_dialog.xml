<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout.m.m"
    android:background="@color/bg_lightblue"
    android:gravity="center"
    android:minHeight="@dimen/s80"
    android:minWidth="@dimen/s200"
    android:orientation="vertical"
    android:padding="@dimen/p30" >

    <TextView
        android:id="@+id/mTitle"
        style="@style/layout.w.w"
        android:layout_marginBottom="@dimen/m10"
        android:layout_marginTop="@dimen/m10"
        android:text="标题"
        android:textColor="@color/text_white"
        android:textSize="@dimen/t20"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mMessage"
        style="@style/layout.w.w"
        android:gravity="center"
        android:text="消息"
        android:textColor="@color/text_white"
        android:textSize="@dimen/t18"
        android:visibility="gone" 
        android:layout_marginTop="@dimen/p10"
        android:layout_marginBottom="@dimen/p10"
        />

    <LinearLayout
        style="@style/layout.m.w"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mCancelButton"
            style="@style/button_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/s30"
            android:layout_marginRight="@dimen/m20"
            android:gravity="center"
            android:minWidth="@dimen/s80"
            android:text="取消"
            android:visibility="gone" />

        <Button
            android:id="@+id/mConfirmButton"
            style="@style/button_white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/s30"
            android:gravity="center"
            android:minWidth="@dimen/s80"
            android:text="确定"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>